{
	"name": "ngx-aot",
	"version": "1.0.0",
	"description": "Angular AOT basic",
	"keywords": [
		"angular",
		"webpack",
		"karma",
		"jasmine",
		"starter"
	],
	"author": "Łukasz Pawełczak",
	"license": "MIT",
	"scripts": {
		"purge": "rimraf node_modules && rimraf dist",
		"clean": "rimraf dist",
		"clean:aot": "rimraf dist-aot",
		"clean:install": "yarn clean && rimraf node_modules && npm i",
		"prewebpack:build": "yarn clean",
		"webpack:build": "webpack --progress",
		"build": "yarn build:dev",
		"build:dev": "yarn webpack:build -- --config config/webpack.dev.js",
		"build:prod": "yarn webpack:build -- --config config/webpack.prod.js",
		"watch": "yarn webpack:build -- --config config/webpack.dev.js --watch",
		"server": "yarn server:dev",
		"server:dev": "webpack-dev-server --config config/webpack.dev.js --inline --progress --port 3000  --content-base src",
		"server:prod": "webpack-dev-server --config config/webpack.prod.js --inline --progress --port 3000  --content-base src",
		"server:aot": "webpack-dev-server --config config/webpack.aot.js --inline --progress --port 3000  --content-base dist-aot",
		"start": "yarn server:dev",
		"start:prod": "yarn server:prod",
		"test": "karma start",
		"test:watch": "karma start --no-single-run --auto-watch",
		"ngc": "node_modules/.bin/ngc -p tsconfig.aot.json",
		"webpack:aot": "ngc -p tsconfig.aot.json --locale=en-US && webpack --config config/webpack.aot.js",
		"prewebpack:aot": "yarn clean:aot",
		"webdriver-manager": "webdriver-manager",
		"webdriver:update": "webdriver-manager update",
		"protractor": "protractor",
		"pree2e": "yarn webdriver:update -- --standalone",
		"e2e": "yarn protractor",
		"analyze-bundles": "yarn webpack:build -- --config config/webpack.dev.js --profile --json > dist/stats.json && webpack-bundle-analyzer dist/stats.json"
	},
	"dependencies": {
		"@angular/animations": "5.1.3",
		"@angular/common": "5.1.3",
		"@angular/compiler": "5.1.3",
		"@angular/core": "11.0.5",
		"@angular/forms": "5.1.3",
		"@angular/http": "5.1.3",
		"@angular/platform-browser": "5.1.3",
		"@angular/platform-browser-dynamic": "5.1.3",
		"@angular/platform-server": "5.1.3",
		"@angular/router": "5.1.3",
		"bootstrap": "^3.3.7",
		"bootstrap-sass": "^3.4.1",
		"core-js": "^2.4.1",
		"es6-shim": "^0.35.1",
		"ie-shim": "^0.1.0",
		"jquery": "^3.0.0",
		"lodash": "4.17.13",
		"reflect-metadata": "^0.1.3",
		"rxjs": "5.5.2",
		"zone.js": "^0.8.12"
	},
	"devDependencies": {
		"@angular/compiler-cli": "5.1.3",
		"@types/cucumber": "0.0.31",
		"@types/es6-shim": "0.0.31",
		"@types/jasmine": "^2.6.0",
		"@types/lodash": "ts2.0",
		"@types/node": "^6.0.38",
		"@types/selenium-webdriver": "^2.53.38",
		"angular2-template-loader": "^0.4.0",
		"autoprefixer": "^6.5.1",
		"awesome-typescript-loader": "~3.1.2",
		"bootstrap-loader": "^1.3.3",
		"chai": "^3.5.0",
		"chai-as-promised": "^6.0.0",
		"copy-webpack-plugin": "^3.0.1",
		"css-loader": "^0.23.1",
		"cucumber": "^1.3.0",
		"cucumber-tsflow": "^1.2.1",
		"exports-loader": "^0.6.3",
		"file-loader": "^0.9.0",
		"html-webpack-plugin": "^2.22.0",
		"imports-loader": "^0.7.0",
		"node-sass": "^3.10.1",
		"null-loader": "^0.1.1",
		"phantomjs-prebuilt": "^2.1.12",
		"precss": "^1.4.0",
		"raw-loader": "^0.5.1",
		"resolve-url-loader": "^1.6.1",
		"sass-loader": "^4.0.2",
		"style-loader": "^0.13.1",
		"to-string-loader": "^1.1.4",
		"ts-helpers": "^1.1.1",
		"ts-node": "^3.3.0",
		"tslib": "^1.7.1",
		"tslint": "^3.14.0",
		"tslint-loader": "^2.1.5",
		"typescript": "2.4.2",
		"url-loader": "^0.5.7",
		"webpack": "2.5.1",
		"webpack-bundle-analyzer": "^2.9.2",
		"webpack-dev-server": "2.4.5",
		"webpack-merge": "4.1.0"
	}
}
